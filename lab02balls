<section id="canvasbox">
  <canvas id="canvas" width="500" height="500">
     В вашем браузере холст не поддерживается
  </canvas>
</section>

<script id="painter">
var canvas = document.getElementById('canvas'),
interv = 30,
ball = function(h){
    this.width = canvas.width;
    this.height = canvas.height;
    this.radius = h.radius;
    this.x = h.x;
    this.y = h.y;
},
rand = function(n, shift){return (shift!=null ? shift : -n/2) + n * Math.random();},
randRad,
balls = Array.apply(0, Array(30)).map(function(){return new ball({
    radius: randRad = rand(1, 10),
    x: rand(canvas.width , randRad),
    y: rand(canvas.height, randRad),
});}),
cont = canvas.getContext('2d'), noStopMotion =1, startMotion;

(startMotion = function(dt2){ //render all
    var now = +new Date();
    cont.fillStyle = '#ffffff';
    cont.fillRect(0, 0, canvas.width, canvas.height);
    cont.fillStyle = 'red';

    balls.forEach(function(S, i, arr){ //render flake
        S.date = S.date || now;
        var dt = dt2 || now - S.date;
        S.y += 4;
        S.y -= S.height * (S.y / S.height |0);

        cont.beginPath();
        cont.arc(S.x, S.y, S.radius, 0, 2 * Math.PI, 0);
        cont.fill();
        S.date = now;
    });
    noStopMotion && setTimeout(arguments.callee, interv);
})();
</script>
