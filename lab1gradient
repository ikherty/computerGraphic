<section id="canvasbox">
  <canvas id="canvas" width="300" height="300">
     В вашем браузере холст не поддерживается
  </canvas>
</section>

<script id="painter">
var cnv = document.getElementById('canvas').getContext('2d');
cnv.save();
cnv.clearRect(0, 0, cnv.canvas.width, cnv.canvas.height);

var img = new Image();
  img.src = 'https://pp.userapi.com/c849528/v849528343/164ea0/sM_aA4ClrS8.jpg';
  img.addEventListener ("load", function(){
  cnv.drawImage(img, 10, 10, 150, 150)
  cnv.fillStyle = "rgba(0, 0, 200, 0.5)";
  }, false);
  cnv.restore();

var grad = cnv.createLinearGradient(10,10, 100, 100);
  grad.addColorStop(0.6,"#000000");
  grad.addColorStop(1,"#FFFFFF");
  cnv.fillStyle=grad;
  cnv.fillRect(10, 10, 150, 150);
cnv.globalAlpha = 0.2;
</script>


